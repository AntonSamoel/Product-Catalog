@model ProductViewModel

<div class="border p-4 mt-4 mb-4">
    <div class="row">
        <h2 class="text-primary mb-4">@(Model.Id != 0 ? "Update" : "Create") Product</h2>
    </div>
    <form method="post">
        <input asp-for="Id" hidden />
        <div asp-validation-summary="ModelOnly"></div>
        <div class="mb-3 row p-1">
            <label asp-for="Name" class="p-0"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="mb-3 row p-1">
            <label asp-for="StartDate" class="p-0"></label>
            <input asp-for="StartDate" class="form-control" />
            <span asp-validation-for="StartDate" class="text-danger"></span>
        </div>
        <div class="mb-3 row p-1">
            <label asp-for="DurationInDays" class="p-0"></label>
            <input asp-for="DurationInDays" class="form-control" />
            <span asp-validation-for="DurationInDays" class="text-danger"></span>
        </div>
        <div class="mb-3 row p-1">
            <label asp-for="Price" class="p-0"></label>
            <input asp-for="Price" class="form-control" />
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>
        <div class="mb-3 row p-1">
            <label asp-for="CategoryId"></label>
            <select asp-for="CategoryId" asp-items="@Model.CategoryList" class="form-select">
                <option disabled selected>--Select Category--</option>
            </select>
            <span asp-validation-for="CategoryId" class="text-danger"></span>
        </div>
        <div class="row">
            <div class="col-6 col-md-5">
                <button type="submit" class="btn btn-primary form-control">@(Model.Id != 0 ? "Update" : "Create")</button>
            </div>
            <div class="col-6 col-md-5 ms-auto">
                <a asp-action="Index" class="btn btn-secondary border form-control">
                    Back to List
                </a>
            </div>
        </div>
    </form>

</div>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}